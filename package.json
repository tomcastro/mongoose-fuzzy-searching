{
  "name": "mongoose-fuzzy-searching",
  "version": "1.3.2",
  "author": "Vassilis Pallas <vspallas@gmail.com>",
  "description": "Mongoose fuzzy searching plugin",
  "main": "index.js",
  "scripts": {
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"./**/*.{json,js}\"",
    "lint": "eslint --ext .js \"./**/*.{json,js}\"",
    "test": "jest --colors --runInBand",
    "test:watch": "npm test -- --watch",
    "test:unit": "npm test -- --group=unit",
    "test:unit:watch": "npm test:unit -- --watch",
    "test:integration": "npm test -- --group=integration",
    "test:integration:watch": "npm test:integration -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/**/*.{json,js}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "keywords": [
    "mongoose",
    "fuzzy",
    "searching",
    "search",
    "plugin",
    "mongo",
    "mongodb"
  ],
  "bugs": {
    "url": "https://github.com/VassilisPallas/mongoose-fuzzy-searching/issues"
  },
  "homepage": "https://github.com/VassilisPallas/mongoose-fuzzy-searching",
  "license": "MIT",
  "peerDependencies": {
    "mongoose": "4.x || 5.x"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-runner-groups": "^1.1.1",
    "lint-staged": "^10.2.2",
    "mongodb-memory-server": "^6.6.0",
    "mongoose": "^5.6.4",
    "prettier": "^2.0.5"
  }
}
